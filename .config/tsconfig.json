{
  "extends": [
    "@tsconfig/node20/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json",
  ],
  "compilerOptions": {
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "newLine": "lf",
    "noEmitOnError": true,
    "stripInternal": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "verbatimModuleSyntax": true,
    "target": "esnext",
    "module": "node18",
  },
  "exclude": [
    "**/coverage",
    "**/dist",
    "**/node_modules",
  ],
}
